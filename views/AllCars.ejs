<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- cdn Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <!-- cdn icones Bootstrap -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">

  <title>Catalogue de voitures</title>
</head>

<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Navbar</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/Blog">Blog</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/allCars">Voitures</a>
          </li>
        </ul>
        <div class="d-flex">
          <a class="btn btn-success" href="/inscription">Inscription</a>
          <a class="btn btn-info" href="/login"><i class="bi bi-box-arrow-in-right"></i> Connexion</a>
      </div>
      </div>
    </div>
  </nav>
<!-- Contenu principal -->

  <h1 class="text-center mt-3 mb-3 text-danger">All Cars</h1>
  <!-- Bouton pour ajouter uen voiture -->
  <div class="d-flex justify-content-end mb-3 mt-3 p-5">
    <a href="/newCarForm" class="btn btn-success"><i class="bi bi-plus-square-fill"></i> Ajouter une voiture</a>
  </div>

  <!-- Container pour afficher les voitires dans des cards Bootstrap -->
  <div class="container">
    <div class="row">
      <% data.forEach(car => { %>
          <div class="col-md-4 ">
              <div class="card mb-4" style="width: 350px; padding:10px">
                  <img src="<%= car.image %>" class="card-img-top"  alt="<%= car.marque %>">
                  <div class="card-body">
                      <h5 class="card-title text-center"><%= car.marque %></h5>
                      <p class="card-text">Modele : <%= car.modele %></p>
                      <p class="card-text">Description: <br> <%= car.description %></p>
                      <div class="mt-auto">
                        <a href="/editCarForm/<%= car._id %>" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Modifier</a>
                        <form action="/deleteCar/<%= car._id %>?_method=DELETE" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i> Supprimer</button>
                        </form>
                    </div>
                  </div>
              </div>
          </div>
      <% }) %>
  </div>
  </div>

<!-- Lien script de bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>

</html>